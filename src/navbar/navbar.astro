---
import Plant1 from '../components/svg/plant1.astro'
import Plant2 from '../components/svg/plant2.astro'
import Plant3 from '../components/svg/plant3.astro'
import Plant4 from '../components/svg/plant4.astro'

const svgIcons: Record<string, any> = {
  Plant1,
  Plant2,
  Plant3,
  Plant4
}

const menuitems = [
  {
    title: 'Albahaca',
    path: '/albahaca',
    icon: 'Plant4'
  },
  {
    title: 'Romero',
    path: '/romero',
    icon: 'Plant2'
  },
  {
    title: 'Or√©gano',
    path: '/oregano',
    icon: 'Plant3'
  },
  {
    title: 'Lavanda',
    path: '/lavanda',
    icon: 'Plant1'
  }
]
const currentPath = Astro.url.pathname
const url = Astro.url
console.log(url, currentPath)
---

<ul class='flex justify-center text-sm p-4 lg:text-lg lg:gap-5 lg:pt-8'>
  {
    menuitems.map((item) => {
      const Icon = svgIcons[item.icon]

      return (
        <>
          {item && (
            <li class=' text-[#24a450]'>
              <a
                href={item.path}
                class={
                  currentPath === item.path
                    ? 'flex py-2 font-bold items-center bg-[#d3eddc] rounded-md px-1'
                    : 'flex py-2 font-bold items-center rounded-md px-1 hover:bg-[#d3eddc] transition-all duration-300'
                }>
                <span class='flex items-center gap-x-1'>
                  {' '}
                  {item.title}
                  <Icon />
                </span>
              </a>
            </li>
          )}
        </>
      )
    })
  }
</ul>
